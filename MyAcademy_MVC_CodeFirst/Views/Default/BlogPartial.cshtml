@* Ui Blog Component *@

@model List<MyAcademy_MVC_CodeFirst.DTOs.BlogDtos.ResultBlogDto>

<div id="blog" class="container-fluid blog py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.2s" style="max-width: 800px;">
            <h4 class="text-primary">Blogdan</h4>
            <h1 class="display-4 mb-4">Haberler ve Güncellemeler</h1>
            <p class="mb-0">
                Sigorta sektörü ile ilgili en güncel haberler, ipuçları ve gelişmelerden haberdar olun. Bilgilendirici yazılarımız ile geleceğinizi güvence altına alın.
            </p>
        </div>

        <div class="row g-4 justify-content-center">

            @foreach (var item in Model)
            {
                <div class="col-lg-6 col-xl-4 wow fadeInUp" data-wow-delay="0.2s">
                    <div class="blog-item">
                        <div class="blog-img">
                            <img src="@item.ImageUrl" style="width:80px;height:200px" class="img-fluid rounded-top w-100" alt="Blog Görseli 1">
                            <div class="blog-categiry py-2 px-4">
                                <span>@item.Subject</span>
                            </div>
                        </div>
                        <div class="blog-content p-4">
                            <div class="blog-comment d-flex justify-content-between mb-3">
                                <div class="small"><span class="fa fa-user text-primary"></span>Admin</div>
                                <div class="small"><span class="fa fa-calendar text-primary"></span> 30 Aralık 2025 </div>
                            </div>
                            <a href="#" class="h4 d-inline-block mb-3">@item.Title</a>
                            <p class="mb-3">@item.Description</p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
