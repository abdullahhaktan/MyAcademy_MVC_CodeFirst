@* Ui Faq Component *@

@model List<MyAcademy_MVC_CodeFirst.DTOs.FaqDtos.ResultFaqDto>

<div id="faq" class="container-fluid faq-section bg-light py-5">
    <div class="container py-5">
        <div class="row g-5 align-items-center">

            <!-- Sol bölüm: SSS -->
            <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="h-100">
                    <div class="mb-5">
                        <h4 class="text-primary">Önemli SSS'ler</h4>
                        <h1 class="display-4 mb-0">Sık Sorulan Sorular</h1>
                    </div>

                    <div class="accordion" id="accordionExample">

                        @{
                            int count = 0;
                        }

                        @foreach (var item in Model)
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="heading@(count)">
                                    <button class="accordion-button @(count == 0 ? "" : "collapsed") border-0"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#collapse@(count)"
                                            aria-expanded="@(count == 0 ? "true" : "false")"
                                            aria-controls="collapse@(count)">
                                        S: @item.Question
                                    </button>
                                </h2>
                                <div id="collapse@(count)" class="accordion-collapse collapse @(count == 0 ? "show" : "")"
                                     aria-labelledby="heading@(count)" data-bs-parent="#accordionExample">
                                    <div class="accordion-body rounded">
                                        C: @item.Answer
                                    </div>
                                </div>
                            </div>
                            count++;
                        }


                    </div>
                </div>
            </div>

            <!-- Sağ bölüm: Görsel -->
            <div class="col-xl-6 wow fadeInRight" data-wow-delay="0.4s">
                <img src="~/Content/Templates/LifeSure-1.0.0/img/carousel-2.png" class="img-fluid w-100" alt="SSS Görseli">
            </div>

        </div>
    </div>
</div>
