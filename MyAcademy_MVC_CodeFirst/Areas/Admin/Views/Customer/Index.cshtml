@model  List<MyAcademy_MVC_CodeFirst.DTOs.CustomerDtos.ResultCustomerDto>

@{
    ViewBag.Title = "Müşteri Yönetimi";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-4 md:p-8 space-y-6 font-display">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div>
            <h2 class="text-3xl font-black tracking-tight text-gray-900 dark:text-white">Müşteri Yönetimi</h2>
            <p class="text-gray-500 dark:text-gray-400 mt-1">Sistemde kayıtlı tüm müşteriler</p>
        </div>
        <a href="/Admin/Customer/CreateCustomer"
           class="bg-primary hover:bg-primary/90 text-white px-5 py-2.5 rounded-lg text-sm font-bold transition-all shadow-lg shadow-primary/30 flex items-center gap-2 no-underline">
            <span class="material-symbols-outlined">add</span>
            Yeni Müşteri
        </a>
    </div>

    <div class="bg-white dark:bg-[#151b2b] rounded-xl border border-gray-200 dark:border-gray-800 shadow-sm overflow-hidden">
        <table class="w-full text-left">
            <thead class="bg-gray-50 dark:bg-gray-800/30">
                <tr>
                    <th class="p-4 text-xs font-bold text-gray-500 uppercase">Ad Soyad</th>
                    <th class="p-4 text-xs font-bold text-gray-500 uppercase">E-Mail</th>
                    <th class="p-4 text-xs font-bold text-gray-500 uppercase">Şehir</th>
                    <th class="p-4 text-xs font-bold text-gray-500 uppercase text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50 transition group">
                        <td class="p-4 font-semibold text-gray-900 dark:text-white">
                            @item.FullName
                        </td>
                        <td class="p-4 text-gray-600 dark:text-gray-300">
                            @item.Email
                        </td>
                        <td class="p-4 text-gray-600 dark:text-gray-300">
                            @item.City
                        </td>
                        <td class="p-4 text-right">
                            <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition">
                                <a href="/Admin/Customer/UpdateCustomer/@item.Id"
                                   class="p-2 rounded-lg hover:bg-primary/10 text-primary">
                                    <span class="material-symbols-outlined">edit</span>
                                </a>
                                <a href="/Admin/Customer/DeleteCustomer/@item.Id"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?')"
                                   class="p-2 rounded-lg hover:bg-red-50 text-red-600">
                                    <span class="material-symbols-outlined">delete</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
