@model  MyAcademy_MVC_CodeFirst.DTOs.AboutDtos.GetAboutByIdDto

@{
    ViewBag.Title = "Hakkımızda Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="p-8 max-w-4xl mx-auto font-display">
    <div class="bg-white dark:bg-[#151b2b] rounded-2xl border border-gray-200 dark:border-gray-800 shadow-xl overflow-hidden">
        <div class="p-6 border-b border-gray-200 dark:border-gray-800 bg-amber-50/50 dark:bg-amber-900/10">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white flex items-center gap-2">
                <span class="material-symbols-outlined text-amber-600">edit_square</span>
                Hakkımızda İçeriğini Güncelle
            </h3>
        </div>

        <div class="p-6">
            @using (Html.BeginForm("Index", "About", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.Id)

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-1.5">
                                Başlık
                            </label>
                            @Html.TextBoxFor(x => x.Title, new
                            {
                                @class = "w-full px-4 py-2 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg outline-none focus:border-amber-500 transition-all"
                            })
                        </div>

                        <div>
                            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-1.5">
                                Açıklama (1)
                            </label>
                            @Html.TextAreaFor(x => x.Description, new
                            {
                                @class = "w-full px-4 py-2 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg outline-none focus:border-amber-500 transition-all h-28 resize-none"
                            })
                        </div>

                        <div>
                            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-1.5">
                                Açıklama (2)
                            </label>
                            @Html.TextAreaFor(x => x.Description1, new
                            {
                                @class = "w-full px-4 py-2 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg outline-none focus:border-amber-500 transition-all h-28 resize-none"
                            })
                        </div>
                    </div>

                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-1.5">
                                Madde 1
                            </label>
                            @Html.TextBoxFor(x => x.item, new
                            {
                                @class = "w-full px-4 py-2 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg outline-none focus:border-amber-500 transition-all"
                            })
                        </div>

                        <div>
                            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-1.5">
                                Madde 2
                            </label>
                            @Html.TextBoxFor(x => x.item1, new
                            {
                                @class = "w-full px-4 py-2 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg outline-none focus:border-amber-500 transition-all"
                            })
                        </div>

                        <div>
                            <label class="block text-sm font-bold text-gray-700 dark:text-gray-300 mb-1.5">
                                Madde 3
                            </label>
                            @Html.TextBoxFor(x => x.item2, new
                            {
                                @class = "w-full px-4 py-2 bg-gray-50 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg outline-none focus:border-amber-500 transition-all"
                            })
                        </div>
                    </div>
                </div>

                <div class="flex gap-3 pt-6">
                    <button type="submit"
                            class="flex-1 bg-amber-500 hover:bg-amber-600 text-white font-bold py-3 rounded-xl transition-all shadow-lg shadow-amber-500/20">
                        Değişiklikleri Kaydet
                    </button>

                    <a href="/Admin/About/Index"
                       class="px-6 py-3 bg-gray-100 dark:bg-gray-800 text-gray-600 dark:text-gray-400 font-bold rounded-xl hover:bg-gray-200 transition-all text-center no-underline">
                        Geri Dön
                    </a>
                </div>
            }
        </div>
    </div>
</div>
