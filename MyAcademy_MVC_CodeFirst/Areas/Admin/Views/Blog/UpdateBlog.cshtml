@model  MyAcademy_MVC_CodeFirst.DTOs.BlogDtos.GetBlogByIdDto

@{
    ViewBag.Title = "Blog Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="p-8 max-w-4xl mx-auto font-display">
    <div class="bg-white dark:bg-[#151b2b] rounded-2xl border shadow-xl overflow-hidden">

        <div class="p-6 border-b bg-amber-50/50">
            <h3 class="text-xl font-bold flex items-center gap-2">
                <span class="material-symbols-outlined text-amber-600">edit_square</span>
                Blog Güncelle
            </h3>
        </div>

        <div class="p-6">
            @using (Html.BeginForm("UpdateBlog", "Blog", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.Id)

                <div class="space-y-5">

                    <div>
                        <label class="block text-sm font-bold mb-1">Kategori</label>
                        @Html.TextBoxFor(x => x.Subject, new { @class = "w-full px-4 py-2 rounded-lg border bg-gray-50" })
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Başlık</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "w-full px-4 py-2 rounded-lg border bg-gray-50" })
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Görsel URL</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "w-full px-4 py-2 rounded-lg border bg-gray-50" })
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Açıklama</label>
                        @Html.TextAreaFor(x => x.Description, new
                        {
                            @class = "w-full px-4 py-2 rounded-lg border bg-gray-50 h-40 resize-none"
                        })
                    </div>

                    <div class="flex gap-3 pt-4">
                        <button class="flex-1 bg-amber-500 text-white font-bold py-3 rounded-xl">
                            Güncelle
                        </button>
                        <a href="/Admin/Blog/Index"
                           class="px-6 py-3 bg-gray-100 rounded-xl font-bold text-center no-underline">
                            Geri Dön
                        </a>
                    </div>

                </div>
            }
        </div>

    </div>
</div>
