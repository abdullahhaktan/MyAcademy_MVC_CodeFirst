@using PagedList.Mvc;
@using PagedList;
@model  IPagedList<MyAcademy_MVC_CodeFirst.DTOs.PolicySaleDtos.ResultPolicySaleDto>

@{
    ViewBag.Title = "Poliçe Satışları";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<style>
    /* Pagination container */
    .pagination {
        display: flex;
        justify-content: center;
        gap: 6px;
        padding: 16px 0;
        list-style: none;
    }

        /* Page item */
        .pagination li a {
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 40px;
            height: 40px;
            padding: 0 12px;
            border-radius: 10px;
            font-weight: 600;
            color: #4b5563; /* gray-600 */
            background-color: #f9fafb; /* gray-50 */
            text-decoration: none;
            transition: all 0.2s ease;
        }

            /* Hover */
            .pagination li a:hover {
                background-color: #e0e7ff; /* primary/10 */
                color: #4f46e5; /* primary */
            }

        /* Active page */
        .pagination li.active a {
            background-color: #4f46e5; /* primary */
            color: white;
            box-shadow: 0 8px 20px rgba(79,70,229,0.3);
        }

        /* Disabled */
        .pagination li.disabled a {
            opacity: 0.4;
            pointer-events: none;
        }
</style>


<div class="flex-1 p-4 md:p-8 space-y-6 font-display">

    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h2 class="text-3xl font-black">Poliçe Satışları</h2>
            <p class="text-gray-500">Gerçekleşen tüm poliçe satışları</p>
        </div>

        <a href="/Admin/PolicySale/CreatePolicySale"
           class="bg-primary text-white px-5 py-2.5 rounded-lg font-bold flex items-center gap-2 no-underline">
            <span class="material-symbols-outlined">add</span>
            Yeni Satış
        </a>
    </div>

    <!-- Table -->
    <div class="bg-white dark:bg-[#151b2b] rounded-xl shadow border overflow-hidden">

        <table class="w-full table-fixed">
            <thead class="bg-gray-50 dark:bg-gray-800/30">
                <tr>

                    <th class="p-4 w-1/6 text-left text-xs font-bold uppercase tracking-wider">
                        Poliçe No
                    </th>

                    <th class="p-4 w-1/6 text-left text-xs font-bold uppercase tracking-wider">
                        Poliçe Tipi
                    </th>

                    <th class="p-4 w-1/6 text-left text-xs font-bold uppercase tracking-wider">
                        Müşteri
                    </th>

                    <th class="p-4 w-1/6 text-left text-xs font-bold uppercase tracking-wider">
                        Başlangıç Tarihi
                    </th>

                    <th class="p-4 w-1/6 text-left text-xs font-bold uppercase tracking-wider">
                        Bitiş Tarihi
                    </th>

                    <th class="p-4 w-1/6 text-right text-xs font-bold uppercase tracking-wider">
                        Satış Tutarı
                    </th>

                    <th class="p-4 w-1/6 text-right text-xs font-bold uppercase tracking-wider">
                        İşlemler
                    </th>

                </tr>
            </thead>

            <tbody class="divide-y divide-gray-100 dark:divide-gray-800">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-800/50 group transition-colors">

                        <!-- Poliçe No -->
                        <td class="p-4 font-semibold text-primary whitespace-nowrap">
                            @item.Policy.PolicyNumber
                        </td>

                        <!-- Poliçe Tipi -->
                        <td class="p-4 font-semibold text-gray-700 dark:text-gray-300 whitespace-nowrap">
                            @item.Policy.InsuranceType
                        </td>

                        <!-- Müşteri -->
                        <td class="p-4 font-semibold text-gray-700 dark:text-gray-300 whitespace-nowrap">
                            @(item.Customer.FullName)
                        </td>

                        <!-- Başlangıç Tarihi -->
                        <td class="p-4 text-gray-700 dark:text-gray-300 whitespace-nowrap">
                            @item.StartDate.ToString("dd.MM.yyyy")
                        </td>

                        <!-- Bitiş Tarihi -->
                        <td class="p-4 text-gray-700 dark:text-gray-300 whitespace-nowrap">
                            @item.EndDate.ToString("dd.MM.yyyy")
                        </td>

                        <!-- Satış Tutarı -->
                        <td class="p-4 text-right font-mono font-bold text-gray-900 dark:text-white">
                            @item.Amount.ToString("C2")
                        </td>

                        <!-- İşlemler -->
                        <td class="p-4 text-right whitespace-nowrap">
                            <div class="flex justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">

                                <a href="/Admin/PolicySale/UpdatePolicySale/@item.Id"
                                   class="p-2 rounded-lg hover:bg-primary/10 text-primary"
                                   title="Düzenle">
                                    <span class="material-symbols-outlined">edit</span>
                                </a>

                                <a href="/Admin/PolicySale/DeletePolicySale/@item.Id"
                                   onclick="return confirm('Silmek istiyor musunuz?')"
                                   class="p-2 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20 text-red-600"
                                   title="Sil">
                                    <span class="material-symbols-outlined">delete</span>
                                </a>

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), (PagedListRenderOptions)ViewBag.PaginationOptions)


    </div>

</div>
