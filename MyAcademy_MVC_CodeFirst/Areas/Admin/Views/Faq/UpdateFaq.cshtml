@model  MyAcademy_MVC_CodeFirst.DTOs.FaqDtos.GetFaqByIdDto

@{
    ViewBag.Title = "SSS Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="p-8 max-w-3xl mx-auto font-display">
    <div class="bg-white dark:bg-[#151b2b] rounded-2xl border shadow-xl overflow-hidden">

        <div class="p-6 border-b bg-amber-50/50 dark:bg-amber-900/10">
            <h3 class="text-xl font-bold flex items-center gap-2">
                <span class="material-symbols-outlined text-amber-600">edit_square</span>
                SSS Güncelle
            </h3>
        </div>

        <div class="p-6">
            @using (Html.BeginForm("UpdateFaq", "Faq", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.Id)

                <div class="space-y-5">

                    <div>
                        <label class="block text-sm font-bold mb-1">Soru</label>
                        @Html.TextBoxFor(x => x.Question, new
                        {
                            @class = "w-full px-4 py-2 rounded-lg border bg-gray-50"
                        })
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Cevap</label>
                        @Html.TextAreaFor(x => x.Answer, new
                        {
                            @class = "w-full px-4 py-2 rounded-lg border bg-gray-50 h-32 resize-none"
                        })
                    </div>

                    <div class="flex gap-3 pt-4">
                        <button class="flex-1 bg-amber-500 text-white font-bold py-3 rounded-xl">
                            Güncelle
                        </button>

                        <a href="/Admin/Faq/Index"
                           class="px-6 py-3 bg-gray-100 rounded-xl font-bold text-center no-underline">
                            Geri Dön
                        </a>
                    </div>

                </div>
            }
        </div>

    </div>
</div>
