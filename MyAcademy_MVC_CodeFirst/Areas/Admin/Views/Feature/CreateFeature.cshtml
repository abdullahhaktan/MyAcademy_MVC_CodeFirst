@model  MyAcademy_MVC_CodeFirst.DTOs.FeatureDtos.CreateFeatureDto

@{
    ViewBag.Title = "Yeni Özellik";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="p-8 max-w-3xl mx-auto font-display">
    <div class="bg-white dark:bg-[#151b2b] rounded-2xl shadow-xl border">
        <div class="p-6 border-b bg-green-50">
            <h3 class="text-xl font-bold flex items-center gap-2">
                <span class="material-symbols-outlined text-green-600">star</span>
                Yeni Özellik Ekle
            </h3>
        </div>

        <div class="p-6">
            @using (Html.BeginForm("CreateFeature", "Feature", FormMethod.Post))
            {
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-bold mb-1">Başlık</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "w-full px-4 py-2 rounded-lg border bg-gray-50" })
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">İkon Adı</label>
                        @Html.TextBoxFor(x => x.Icon, new
                        {
                            @class = "w-full px-4 py-2 rounded-lg border bg-gray-50",
                            placeholder = "home, security, star, support"
                        })
                        <p class="text-xs text-gray-400 mt-1">
                            Material Symbols ikon adı giriniz
                        </p>
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Açıklama</label>
                        @Html.TextAreaFor(x => x.Description, new
                        {
                            @class = "w-full px-4 py-2 rounded-lg border bg-gray-50 h-28 resize-none"
                        })
                    </div>
                </div>

                <div class="flex gap-3 pt-6">
                    <button class="flex-1 bg-primary text-white py-3 rounded-xl font-bold">
                        Kaydet
                    </button>
                    <a href="/Admin/Feature/Index"
                       class="px-6 py-3 bg-gray-100 rounded-xl font-bold no-underline">
                        İptal
                    </a>
                </div>
            }
        </div>
    </div>
</div>
