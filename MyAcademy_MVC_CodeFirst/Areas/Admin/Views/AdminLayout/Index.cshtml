    <script>
        $(document).ready(function () {
            // Layout'taki arama kutusuna her yazıldığında tetiklenir
            $("#layout-search").on("keyup", function () {
                var value = $(this).val().toLowerCase();

                // 1. Tablo satırlarını filtrele (Eski yapı için destek devam eder)
                $("main table tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });

                // 2. Yeni Kart yapılarını filtrele (Grid içindeki ana div'ler)
                // Kartların bulunduğu ana grid konteynerini ve içindeki her bir kartı hedefler
                $(".grid > div").filter(function () {
                    // Eğer bu bir kartsa (içinde butonlar veya metin varsa) filtrele
                    // Sayfa başlığını veya butonları gizlememek için kontrol ekliyoruz
                    if ($(this).parent().hasClass('grid')) {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                    }
                });
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            // Drawer Kontrolleri
            $("#open-ai-search, #close-ai-drawer, #ai-overlay").on("click", function () {
                $("#ai-drawer").toggleClass("translate-x-full");
                $("#ai-overlay").toggleClass("hidden");
            });

            // AI Sorgu Gönderme
            $("#send-ai-query").on("click", function () {
                const query = $("#ai-query").val();
                if (!query) return;

                // Arayüzü güncelle (Yükleniyor durumu)
                $("#ai-content").append(`
                        <div class="bg-primary/10 text-primary self-end p-3 rounded-xl ml-8"><b>Soru:</b> ${query}</div>
                        <div class="ai-loading bg-slate-100 dark:bg-slate-800 p-3 rounded-xl mr-8 animate-pulse text-slate-500 text-xs">AI araştırıyor...</div>
                    `);
                $("#ai-query").val("");

                $.post("/Admin/AdminLayout/AskTavily", { query: query }, function (data) {
                    $(".ai-loading").remove();

                    // Eğer data.answer boşsa kullanıcıya hata mesajı göster
                    let responseText = (data && data.answer) ? data.answer : "Bilgi getirilemedi.";

                    $("#ai-content").append(`
                                <div class="bg-slate-100 dark:bg-slate-800 p-3 rounded-xl mr-8 border-l-4 border-primary shadow-sm">
                                    <p class="text-slate-700 dark:text-slate-200">${responseText}</p>
                                    <div class="mt-2 text-[10px] text-slate-400 font-bold uppercase tracking-widest">Tavily AI • Güncel Veri</div>
                                </div>
                            `);

                    $("#ai-content").scrollTop($("#ai-content")[0].scrollHeight);
                });
            });
        });
    </script>

    <script>
