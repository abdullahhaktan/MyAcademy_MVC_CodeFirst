@model  MyAcademy_MVC_CodeFirst.DTOs.TestimonialDtos.CreateTestimonialDto

@{
    ViewBag.Title = "Referans Ekle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="p-8 max-w-4xl mx-auto font-display">
    <div class="bg-white dark:bg-[#151b2b] rounded-2xl shadow-xl border">
        <div class="p-6 border-b bg-amber-50">
            <h3 class="text-xl font-bold flex items-center gap-2">
                <span class="material-symbols-outlined text-amber-600">rate_review</span>
                Referans Ekle
            </h3>
        </div>

        <div class="p-6">
            @using (Html.BeginForm("CreateTestimonial", "Testimonial", FormMethod.Post))
            {
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-bold mb-1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.FullName, new { @class = "w-full px-4 py-2 rounded-lg border bg-gray-50" })
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Meslek</label>
                        @Html.TextBoxFor(x => x.Job, new { @class = "w-full px-4 py-2 rounded-lg border bg-gray-50" })
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Yıldız Sayısı</label>
                        @Html.TextBoxFor(x => x.StarCount, new { @class = "w-full px-4 py-2 rounded-lg border bg-gray-50", type = "number", min = "1", max = "5" })
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Açıklama</label>
                        @Html.TextAreaFor(x => x.Description, new
                        {
                            @class = "w-full px-4 py-2 rounded-lg border bg-gray-50 h-28 resize-none"
                        })
                    </div>

                    <div>
                        <label class="block text-sm font-bold mb-1">Resim URL</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "w-full px-4 py-2 rounded-lg border bg-gray-50" })
                    </div>
                </div>

                <div class="flex gap-3 pt-6">
                    <button class="flex-1 bg-amber-500 text-white py-3 rounded-xl font-bold">
                        Kaydet
                    </button>
                    <a href="/Admin/Testimonial/Index"
                       class="px-6 py-3 bg-gray-100 rounded-xl font-bold no-underline">
                        Geri Dön
                    </a>
                </div>
            }
        </div>
    </div>
</div>
